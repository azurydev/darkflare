{
  "name": "darkflare",
  "version": "3.0.2",
  "description": "The Cloudflare Framework",
  "types": "./types/index.d.ts",
  "bin": {
    "darkflare": "./dist/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --external:esbuild --bundle --minify --format=cjs --platform=node --target=node16 --legal-comments=none --outfile=dist/index.js",
    "build:watch": "esbuild src/index.ts --watch --external:esbuild --bundle --minify --format=cjs --platform=node --target=node16 --legal-comments=none --outfile=dist/index.js",
    "test:module": "node --experimental-vm-modules ../../node_modules/jest/bin/jest.js -- -i test/moduleWorker.test.ts",
    "test:service": "jest -i test/serviceWorker.test.ts",
    "test": "npm run test:module && npm run test:service",
    "publish:canary": "npm version prerelease --preid=canary && npm publish --tag canary",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "funding": {
    "type": "individual",
    "url": "https://ko-fi.com/azury"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azurydev/darkflare.git"
  },
  "keywords": [
    "api",
    "workers",
    "cloudflare",
    "framework",
    "darkflare"
  ],
  "author": "Azury <hello@azury.dev> (https://azury.dev)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/azurydev/darkflare/issues"
  },
  "homepage": "https://github.com/azurydev/darkflare#readme",
  "dependencies": {
    "esbuild": "^0.14.39"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "@goodies/get-files": "^1.0.4",
    "@goodies/get-readable-size": "^1.0.3",
    "@tsndr/cloudflare-worker-jwt": "^1.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/yargs": "^17.0.10",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "closest-match": "^1.3.3",
    "fs-extra": "^10.1.0",
    "miniflare": "^2.4.0",
    "nanoid": "^3.3.4",
    "ts-jest": "^28.0.2",
    "typescript": "^4.6.4",
    "yargs": "^17.5.0"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
