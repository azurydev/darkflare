{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2022",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "noEmit": true,
    "skipLibCheck": true,
    "newLine": "crlf",
    "types": [
      "fs-extra",
      "jest",
      "node",
      "yargs"
    ]
  }
}
