{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "moduleResolution": "node",
    "rootDir": "packages",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "noEmit": true,
    "skipLibCheck": true,
    "newLine": "crlf",
    "types": [
      "node",
      "jest",
      "fs-extra"
    ]
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
